#
# date and time
#

date=$(date "+%d-%b-%Y, %A")
time=$(date "+%l:%M:%S %p")

hr=$(date +%l)

if [ $hr -eq 0 ] || [ $hr -eq 12 ] ; then
  clock=ğŸ•›
elif [ $hr -eq 1 ] ; then
  clock=ğŸ•
elif [ $hr -eq 2 ] ; then
  clock=ğŸ•‘
elif [ $hr -eq 3 ] ; then
  clock=ğŸ•’
elif [ $hr -eq 4 ] ; then
  clock=ğŸ•“
elif [ $hr -eq 5 ] ; then
  clock=ğŸ•”
elif [ $hr -eq 6 ] ; then
  clock=ğŸ••
elif [ $hr -eq 7 ] ; then
  clock=ğŸ•–
elif [ $hr -eq 8 ] ; then
  clock=ğŸ•—
elif [ $hr -eq 9 ] ; then
  clock=ğŸ•˜
elif [ "$hr" -eq 10 ] ; then
  clock=ğŸ•™
elif [ $hr -eq 11 ] ; then
  clock=ğŸ•š
fi

#
# battery percentage
#

btemp=$(upower --show-info $(upower --enumerate |\
grep 'BAT') |\
egrep "state|percentage" |\
awk '{print $2}')

status=$(echo $btemp | awk -F" " '{ print $1 }')
percentage=$(echo $btemp | awk -F" " '{ print $2 }')

if [ "$status" == "charging" ] ; then
  battery=âš¡;
elif [ "$status" == "discharging" ] ; then
  battery=ğŸ”»;
elif [ "$status" == "pending-charge" ] || [ "$status" == "fully-charged" ] ; then
  battery=ğŸ”‹;
fi

#
# volume level
#

level=$(amixer sget Master | awk -F"[][]" '/Left: Play.+/ { print $0 }' | awk -F"[][]" '{ print $2 }')
temp=$(amixer sget Master | awk -F"[][]" '/Left: Play.+/ { print $0 }' | awk -F" " '{ print $6 }')
if [ "$temp" != "[on]" ] || [ "$level" == "0%" ] ; then
  volume=ğŸ”‡
elif [ ${level::-1} -le 35 ] ; then
  volume=ğŸ”‰;
else
  volume=ğŸ”Š;
fi

#
# Network
#

c_name=$(nmcli | rg connected | awk -F" " '/to/ { print $4 }')
c_state=$(echo -e $(nmcli | rg connected | awk -F" " '/to/ { print $2 }') | awk -F" " '{ print $1 }')
if [ "$c_state" != "connected" ] ; then
  c_state=ğŸš«
else
  c_state=ğŸ”—
fi

#
# Brightness
#

brightness=$(($(brightnessctl g) * 100 / 937 ))
if [ $(($brightness)) -ge 50 ] ; then
  backlit=ğŸ”†
else
  backlit=ğŸ”…
fi

#
# Candybar
#

echo -e $c_state $c_name "|" $backlit $brightness "|" $volume $level "|" $battery $percentage "|" ğŸ“… $date "|" $clock $time
