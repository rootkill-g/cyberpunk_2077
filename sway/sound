level=$(amixer sget Master | awk -F"[][]" '/Left: Play.+/ { print $0 }' | awk -F"[][]" '{ print $2 }')
temp=$(amixer sget Master | awk -F"[][]" '/Left: Play.+/ { print $0 }' | awk -F" " '{ print $6 }')
if [ "$temp" != "[on]" ] || [ "$level" == "0%" ] ; then
  makoctl dismiss
  notify-send -t 4000 -i $HOME/.config/mako/cute/sound_2.png "ã§éŸ³æ¥½ã‚’è´ã ğŸ”‡ $level"
elif [ ${level::-1} -le 35 ] ; then
  makoctl dismiss
  notify-send -t 4000 -i $HOME/.config/mako/cute/sound_2.png "ã§éŸ³æ¥½ã‚’è´ã ğŸ”‰ $level"
else
  makoctl dismiss
  notify-send -t 4000 -i $HOME/.config/mako/cute/sound_2.png "ã§éŸ³æ¥½ã‚’è´ã ğŸ”Š $level"
fi
