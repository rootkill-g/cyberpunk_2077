set window-title-basename "true"
set selection-clipboard "clipboard"

#
# Color theme
#

set notification-error-bg       "#ff4a57" # Red
set notification-error-fg       "#dddddd" # Foreground
set notification-warning-bg     "#d08770" # Orange
set notification-warning-fg     "#4c566a" # Selection
set notification-bg             "#000000" # Background
set notification-fg             "#dddddd" # Foreground

set completion-bg               "#000000" # Background
set completion-fg               "#5e81ac" # Comment
set completion-group-bg         "#000000" # Background
set completion-group-fg         "#5e81ac" # Comment
set completion-highlight-bg     "#4c566a" # Selection
set completion-highlight-fg     "#dddddd" # Foreground

set index-bg                    "#000000" # Background
set index-fg                    "#dddddd" # Foreground
set index-active-bg             "#4c566a" # Current Line
set index-active-fg             "#dddddd" # Foreground

set inputbar-bg                 "#000000" # Background
set inputbar-fg                 "#dddddd" # Foreground
set statusbar-bg                "#000000" # Background
set statusbar-fg                "#dddddd" # Foreground

set highlight-color             "#DA1C52" # Orange
set highlight-active-color      "#ed1e79" # Pink

set default-bg                  "#000000" # Background
set default-fg                  "#dddddd" # Foreground

set render-loading              true
set render-loading-fg           "#000000" # Background
set render-loading-bg           "#dddddd" # Foreground

#
# Recolor mode settings
#

set recolor-lightcolor          "#000000" # Background
set recolor-darkcolor           "#dddddd" # Foreground

#
# Startup options
#
set adjust-open width
set recolor true
